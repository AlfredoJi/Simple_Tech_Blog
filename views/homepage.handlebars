{{#each posts as |post|}}
<div class="card">
  <div class="card-body">
    <h5 class="card-title">{{post.title}}</h5>
    <p class="card-text">{{post.content}}</p>
     <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
    <a href="#" class="btn btn-primary">Comment</a>
  </div>
</div>
{{/each}}